<odoo>
  <data>
  
    
        <record id="product_template_form_view_inherit_metrokitchen" model="ir.ui.view">
            <field name="name">product.template.form.inherit.metrokitchen</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']//field[@name='barcode']" position="after">
                    <field name="weekday" widget="selection"/>
                    <field name="week_cycle"/>
                </xpath>
            </field>
        </record>
    
    
  
  </data>
</odoo>
